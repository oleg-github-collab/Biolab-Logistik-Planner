# Environment Configuration
NODE_ENV=production
PORT=5000

# PostgreSQL Datenbank (Railway stellt dies bereit)
DATABASE_URL=postgresql://user:password@host:port/database

# JWT Secret - CHANGE THIS IN PRODUCTION!
# Generieren Sie einen starken zufälligen String
JWT_SECRET=biolab-logistik-secret-key-change-in-production

# OpenAI API Key (required for knowledge base dictation)
OPENAI_API_KEY=

# Redis URL (optional, für WebSocket-Skalierung)
REDIS_URL=redis://user:password@host:port

# Logging
LOG_LEVEL=info

# CORS Configuration (Railway URL)
CORS_ORIGIN=https://your-app.railway.app
FRONTEND_URL=https://your-app.railway.app

# File Upload Settings
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Cloudinary Configuration (for profile photos and stories)
# Get these from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
