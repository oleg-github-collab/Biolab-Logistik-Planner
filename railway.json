{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "sh -c \"cd client && npm run build\""
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "sh -c \"npm run migrate:pg && npm start\"",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
