{
  "name": "biolab-logistik-planner",
  "version": "1.0.0",
  "description": "Biolab Logistik Planner - Schedule, Messaging and Waste Management",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build",
    "migrate": "node server/database/migrations.js migrate",
    "migrate:rollback": "node server/database/migrations.js rollback",
    "migrate:status": "node server/database/migrations.js status",
    "migrate:create": "node server/database/migrations.js create",
    "migrate:pg": "node server/runMigrations.js",
    "seed": "node server/database/seeds.js",
    "seed:clear": "node server/database/seeds.js --clear",
    "db:reset": "npm run migrate:rollback && npm run migrate && npm run seed",
    "db:rebuild": "node server/scripts/resetDatabase.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "ioredis": "^5.8.2",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
    "node-schedule": "^2.1.1",
    "pg": "^8.16.3",
    "pg-pool": "^3.10.1",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.6",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.x"
  }
}
